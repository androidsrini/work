<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <TextView
        android:id="@+id/fragment_forgot_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/forgot_main_text"
        android:textColor="@color/primary_color"
        android:textSize="18sp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/img_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="18dp"
         />

    <RelativeLayout
        android:id="@+id/rlContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_forgot_main"
        android:visibility="visible">

        <TextView
            android:id="@+id/fragment_forgot_content_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="40dp"
            android:text="@string/forgot_content_text"
            android:textColor="@color/secondary_color"
            android:textSize="14sp" />


        <LinearLayout
            android:id="@+id/ll_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_forgot_content_text"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="40dp"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/et_mobileNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/forgot_mobile_text"
                    android:imeOptions="actionDone"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:textColor="@color/secondary_color"
                    android:textSize="14sp"
                    android:theme="@style/EditTextTheme" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_email"
            android:layout_marginStart="40dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="30dp"
            android:background="@color/primary_color"
            android:text="@string/forgot_btn_submit"
            android:textStyle="bold"
            android:textColor="@color/secondary_color"
            android:textSize="18sp" />
    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rlOTP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_forgot_main"
        android:visibility="gone"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="25dp"
        >

        <TextView
            android:id="@+id/tvPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/verify_mobile_text_place_holder"
            android:textColor="@color/secondary_color"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/errorResponseStripTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_color"
            android:textSize="@dimen/error_msg_strip_text_size"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="@id/tvPhoneNumber"
            app:layout_constraintTop_toBottomOf="@+id/tvPhoneNumber" />

        <EditText
            android:id="@+id/optNumber1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:ems="2"
            android:focusable="true"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="1"
            android:nextFocusForward="@id/optNumber2"
            android:textColor="@color/secondary_color"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/errorResponseStripTextView" />

        <View
            android:id="@+id/view"
            android:layout_width="35dp"
            android:layout_height="4dp"
            android:background="@drawable/view_for_edittext_primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/optNumber1" />

        <EditText
            android:id="@+id/optNumber2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:ems="2"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="1"
            android:nextFocusForward="@id/optNumber3"
            android:textColor="@color/secondary_color"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@id/optNumber1"
            app:layout_constraintTop_toBottomOf="@+id/errorResponseStripTextView" />

        <View
            android:id="@+id/view1"
            android:layout_width="35dp"
            android:layout_height="4dp"
            android:background="@drawable/view_for_edittext_lowconstract"
            app:layout_constraintStart_toEndOf="@id/view"
            app:layout_constraintTop_toBottomOf="@+id/optNumber2" />

        <EditText
            android:id="@+id/optNumber3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:ems="2"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="1"
            android:nextFocusForward="@id/optNumber4"
            android:textColor="@color/secondary_color"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@id/optNumber2"
            app:layout_constraintTop_toBottomOf="@+id/errorResponseStripTextView" />

        <View
            android:id="@+id/view2"
            android:layout_width="35dp"
            android:layout_height="4dp"
            android:background="@drawable/view_for_edittext_lowconstract"
            app:layout_constraintStart_toEndOf="@id/view1"
            app:layout_constraintTop_toBottomOf="@+id/optNumber3" />

        <EditText
            android:id="@+id/optNumber4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:ems="2"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/secondary_color"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@id/optNumber3"
            app:layout_constraintTop_toBottomOf="@+id/errorResponseStripTextView" />

        <View
            android:id="@+id/view3"
            android:layout_width="35dp"
            android:layout_height="4dp"
            android:background="@drawable/view_for_edittext_lowconstract"
            app:layout_constraintStart_toEndOf="@id/view2"
            app:layout_constraintTop_toBottomOf="@+id/optNumber4" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/nextFloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_weight="0.8"
            android:src="@drawable/right_arrow"
            app:fabSize="auto"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/errorResponseStripTextView" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rlPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_forgot_main"
        android:layout_marginStart="40dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="40dp"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/tvPasswordText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forgot_new_password_des"
            android:textColor="@color/secondary_color"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passwordTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tvPasswordText"
            app:passwordToggleEnabled="true"
            app:hintEnabled="false"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/etForgotPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:hint="@string/password_text"
                android:inputType="textPassword"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:backgroundTint="@color/primary_color"
                android:textColorHint="@color/secondary_color"
                android:textColor="@color/secondary_color" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/confirmpasswordTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/passwordTextInputLayout"
            app:passwordToggleEnabled="true"
            app:hintEnabled="false"
            >

            <EditText
                android:id="@+id/etConfirmForgotPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:hint="@string/confirm_password_text"
                android:inputType="textPassword"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:backgroundTint="@color/primary_color"
                android:textColorHint="@color/secondary_color"
                android:textColor="@color/secondary_color" />

        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:id="@+id/btnSubmitPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintTop_toBottomOf="@+id/confirmpasswordTextInputLayout"
            android:background="@color/primary_color"
            android:text="@string/forgot_btn_submit"
            android:textStyle="bold"
            android:textColor="@color/secondary_color"
            android:textSize="18sp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>