<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout android:id="@+id/addDriverDetailsParentConstrainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_16"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/driverNumberTextInputLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/driverNameTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:hintEnabled="false"
        >

        <EditText
            android:id="@+id/etDriverName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:singleLine="true"
            android:hint="Driver Name"
            android:imeOptions="actionNext"
            android:inputType="textAutoCorrect"
            />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/driverContNumTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toBottomOf="@+id/driverNameTextInputLayout"
        app:hintEnabled="false"
        >

        <EditText
            android:id="@+id/etDriverContNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:singleLine="true"
            android:hint="@string/add_vehicle_driver_contact"
            android:imeOptions="actionNext"
            android:inputType="phone"
            />
    </android.support.design.widget.TextInputLayout>

    <!--<View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="3dp"
        android:background="@color/primary_color"
        android:layout_below="@+id/etVehicleNumber"
        app:layout_constraintTop_toBottomOf="@+id/etDriverContNum" />-->

    <android.support.design.widget.TextInputLayout
        android:id="@+id/driverEmailTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/driverContNumTextInputLayout"
        app:layout_constraintHorizontal_bias="0.0"
        app:hintEnabled="false"
        >

        <EditText
            android:id="@+id/etDriverEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:singleLine="true"
            android:hint="@string/add_vehicle_driver_email"
            android:imeOptions="actionNext"
            />
    </android.support.design.widget.TextInputLayout>

    <!--<View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="3dp"
        android:background="@color/primary_color"
        android:layout_below="@+id/etVehicleNumber"
        app:layout_constraintTop_toBottomOf="@+id/etDriverEmail" />-->

    <android.support.design.widget.TextInputLayout
        android:id="@+id/driverPasswordTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/driverEmailTextInputLayout"
        app:layout_constraintHorizontal_bias="0.0"
        app:passwordToggleEnabled="true"
        app:hintEnabled="false"
        >

        <EditText
            android:id="@+id/etDriverPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:singleLine="true"
            android:hint="@string/add_vehicle_password"
            android:inputType="textPassword"
            android:imeOptions="actionNext"
            />

    </android.support.design.widget.TextInputLayout>

    <!--<View
        android:id="@+id/view6"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="3dp"
        android:background="@color/primary_color"
        android:layout_below="@+id/etVehicleNumber"
        app:layout_constraintTop_toBottomOf="@+id/etDriverPassword" />-->

    <android.support.design.widget.TextInputLayout
        android:id="@+id/driverConTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@+id/driverPasswordTextInputLayout"
        app:layout_constraintHorizontal_bias="0.0"
        app:hintEnabled="false"
        app:passwordToggleEnabled="true"
        >

        <EditText
            android:id="@+id/etDriverConPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:singleLine="true"
            android:hint="@string/add_vehicle_confirm_password"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/invite_code_textInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintEnabled="false"
        app:layout_constraintTop_toBottomOf="@+id/driverConTextInputLayout">

        <EditText
            android:id="@+id/invite_code_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/invite_text"
            />

    </android.support.design.widget.TextInputLayout>

    <com.codesense.driverapp.di.utils.AppSpinnerViewGroup
        android:id="@+id/vehicle_appSpinnerViewGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/invite_code_textInputLayout"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/vehicle_appSpinnerViewGroup"
        app:layout_constraintBottom_toTopOf="@+id/btnAddDriver"
        />
    <!--</ScrollView>-->

    <Button
        android:id="@+id/btnAddDriver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/upload_doc_text"
        android:textSize="21sp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:textAllCaps="false"
        android:stateListAnimator="@null"
        android:textColor="@color/secondary_color"
        android:background="@drawable/button_primary_full_filled" />

</android.support.constraint.ConstraintLayout>