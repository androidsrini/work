<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.paymentsummary.PaymentSummaryActivity">

    <Button
        android:id="@+id/collectPaymentButton"
        style="@style/Fat"
        android:layout_margin="@dimen/margin_10"
        android:background="@drawable/yellow_button_drawable"
        android:text="@string/collect_payment_label"
        android:textColor="@color/secondary_color"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ScrollView
        style="@style/Fat">
    <android.support.constraint.ConstraintLayout
        style="@style/Fat">

    <RelativeLayout
        android:id="@+id/addressContainerRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/white_card"
        app:layout_constraintTop_toBottomOf="@+id/paymentSummeryBackgroundView">

        <LinearLayout
            android:id="@+id/pickupConstrainLinearLayout"
            style="@style/Fat"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pickupPointImageView"
                style="@style/Wrap"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_10"
                android:src="@drawable/pointer_in_screen_green" />

            <TextView
                android:id="@+id/pickupLocationAddressTextView"
                style="@style/Fat"
                android:layout_marginEnd="@dimen/margin_10"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_10"
                android:text="@string/dummy_pickup_location" />
        </LinearLayout>

        <LinearLayout
            style="@style/Fat"
            android:layout_below="@+id/locationDividerLineView"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dropPointImageView"
                style="@style/Wrap"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginStart="@dimen/margin_10"
                android:src="@drawable/drop_pointer_red" />

            <TextView
                android:id="@+id/dropLocationAddressTextView"
                style="@style/Wrap"
                android:layout_marginEnd="@dimen/margin_10"
                android:layout_marginStart="@dimen/margin_10"
                android:text="@string/dummy_drop_location" />
        </LinearLayout>

        <View
            android:id="@+id/locationDividerLineView"
            style="@style/Wrap"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/pickupConstrainLinearLayout"
            android:layout_marginStart="-10dp"
            android:background="@drawable/landscap_dotted_line"
            android:layerType="software"
            android:rotation="90" />

    </RelativeLayout>

    <android.support.constraint.ConstraintLayout
        style="@style/Fat"
        android:padding="20dp"
        android:background="@drawable/white_card"
        app:layout_constraintTop_toBottomOf="@+id/addressContainerRelativeLayout">

    <TextView
        android:id="@+id/distanceTravelledLabelTextView"
        style="@style/Wrap.SummaryLabelStyle"
        android:text="@string/distance_travel_label"
        app:layout_constraintEnd_toStartOf="@+id/distanceTravelledValueTextView"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/distanceTravelledValueTextView"
        style="@style/Wrap.SummeryValue"
        android:text="@string/distance_travel_label"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/timeTakenLabelTextView"
        style="@style/Wrap.SummaryLabelStyle"
        android:text="@string/time_taken_label"
        app:layout_constraintTop_toBottomOf="@+id/distanceTravelledLabelTextView"
        app:layout_constraintEnd_toStartOf="@+id/timeTakenValueTextView"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/timeTakenValueTextView"
        style="@style/Wrap.SummeryValue"
        android:text="@string/time_taken_label"
        app:layout_constraintTop_toBottomOf="@+id/distanceTravelledValueTextView"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/baseTareLabelTextView"
        style="@style/Wrap.SummaryLabelStyle"
        android:text="@string/base_tare_label"
        app:layout_constraintTop_toBottomOf="@+id/timeTakenLabelTextView"
        app:layout_constraintEnd_toStartOf="@+id/baseTareValueTextView"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/baseTareValueTextView"
        style="@style/Wrap.SummeryValue"
        android:text="@string/base_tare_label"
        app:layout_constraintTop_toBottomOf="@+id/timeTakenValueTextView"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/transWaitingLabelTextView"
        style="@style/Wrap.SummaryLabelStyle"
        android:text="@string/trans_waiting_fee_placeholder"
        app:layout_constraintTop_toBottomOf="@+id/baseTareLabelTextView"
        app:layout_constraintEnd_toStartOf="@+id/transWaitingValueTextView"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/transWaitingValueTextView"
        style="@style/Wrap.SummeryValue"
        android:text="@string/trans_waiting_fee_placeholder"
        app:layout_constraintTop_toBottomOf="@+id/baseTareValueTextView"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/taxLabelTextView"
        style="@style/Wrap.SummaryLabelStyle"
        android:text="@string/tax_label"
        app:layout_constraintTop_toBottomOf="@+id/transWaitingLabelTextView"
        app:layout_constraintEnd_toStartOf="@+id/taxValueTextView"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/taxValueTextView"
        style="@style/Wrap.SummeryValue"
        android:text="@string/tax_label"
        app:layout_constraintTop_toBottomOf="@+id/transWaitingLabelTextView"
        app:layout_constraintEnd_toEndOf="parent"
        />

        <View
            android:id="@+id/totalDividerView"
            style="@style/Fat"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="@dimen/margin_10"
            app:layout_constraintTop_toBottomOf="@+id/taxLabelTextView"
            />

    <TextView
        android:id="@+id/subTotalLabelTextView"
        style="@style/Wrap.SummaryLabelStyle"
        android:text="@string/subtotal_label"
        app:layout_constraintTop_toBottomOf="@+id/totalDividerView"
        app:layout_constraintEnd_toStartOf="@+id/subTotalValueTextView"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/subTotalValueTextView"
        style="@style/Wrap.SummeryValue"
        android:text="@string/subtotal_label"
        app:layout_constraintTop_toBottomOf="@+id/totalDividerView"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/discountLabelTextView"
        style="@style/Wrap.SummaryLabelStyle"
        android:text="@string/discount_label"
        app:layout_constraintTop_toBottomOf="@+id/subTotalLabelTextView"
        app:layout_constraintEnd_toStartOf="@+id/discountValueTextView"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/discountValueTextView"
        style="@style/Wrap.SummeryValue"
        android:text="@string/discount_label"
        app:layout_constraintTop_toBottomOf="@+id/subTotalValueTextView"
        app:layout_constraintEnd_toEndOf="parent"
        />

        <View
            android:id="@+id/discountDividerView"
            style="@style/Fat"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="@dimen/margin_10"
            app:layout_constraintTop_toBottomOf="@+id/totalValueTextView"
            />

    <TextView
        android:id="@+id/totalLabelTextView"
        style="@style/Wrap.SummaryLabelStyle"
        android:text="@string/total_label"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/discountLabelTextView"
        app:layout_constraintEnd_toStartOf="@+id/totalValueTextView"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/totalValueTextView"
        style="@style/Wrap.SummeryValue"
        android:text="@string/total_label"
        app:layout_constraintTop_toBottomOf="@+id/discountValueTextView"
        app:layout_constraintEnd_toEndOf="parent"
        />

        <TextView
            android:id="@+id/paymentTypeLabelTextView"
            style="@style/Wrap.SummaryLabelStyle"
            android:text="@string/payment_type_label"
            android:layout_marginTop="@dimen/margin_10"
            app:layout_constraintTop_toBottomOf="@+id/discountDividerView"
            app:layout_constraintEnd_toStartOf="@+id/paymentTypeValueTextView"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/paymentTypeValueTextView"
            style="@style/Wrap.SummeryValue"
            android:text="@string/payment_type_label"
            android:layout_marginTop="@dimen/margin_10"
            app:layout_constraintTop_toBottomOf="@+id/discountDividerView"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </android.support.constraint.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/paymentSummeryBackgroundView"
        style="@style/Fat"
        android:layout_height="150dp"
        android:background="@color/primary_color"
        android:padding="@dimen/padding_10">

        <TextView
            android:id="@+id/paymentSummeryHeaderTextView"
            style="@style/Wrap.PaymentSummeryHeader"
            android:text="@string/total_fare_label" />

        <TextView
            style="@style/Wrap.PaymentSummeryHeader"
            android:layout_below="@+id/paymentSummeryHeaderTextView"
            android:text="@string/total_fare_placeholder"
            android:textSize="25sp" />

        <TextView
            style="@style/Wrap.PaymentDetailsStyle"
            android:layout_alignParentBottom="true"
            android:text="@string/dummy_transaction_id"
            android:textColor="@color/secondary_color" />

        <TextView
            style="@style/Wrap.PaymentDetailsStyle"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:text="@string/dummy_transaction_date" />
    </RelativeLayout>
    </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>