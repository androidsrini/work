<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.accept.AcceptActivity">

    <RelativeLayout
        android:id="@+id/acceptStripRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/secondary_color"
        android:padding="@dimen/padding_10"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/pickupTitleTextView"
            style="@style/Fat.PickupLabelStyle"
            android:text="@string/online_pick_up_location_title" />
    <TextView
        style="@style/Fat.PickupAddressStyle"
        android:text="@string/dummy_pickup_location"
        />
    <ImageView
        android:id="@+id/pickupNavigationImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_navigate"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        />
    </RelativeLayout>

    <com.google.android.gms.maps.MapView
        android:id="@+id/acceptMapView"
        style="@style/Fat"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/acceptStripRelativeLayout"
        app:layout_constraintBottom_toTopOf="@+id/acceptPersonConstrainRelativeLayout"
        />

    <RelativeLayout
        android:id="@+id/acceptPersonConstrainRelativeLayout"
        style="@style/Fat"
        android:padding="10dp"
        android:background="@color/secondary_color"
        app:layout_constraintBottom_toTopOf="@+id/acceptBottomConstrainLinearLayout">

        <ImageView
            android:id="@+id/imgProfile"
            style="@style/Wrap"
            android:layout_centerVertical="true"
            android:src="@drawable/user" />

        <TextView
            android:id="@+id/UserName"
            style="@style/Wrap"
            android:layout_toEndOf="@+id/imgProfile"
            android:text="Vijay"
            android:layout_marginTop="6dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/background_color"
            android:textSize="23sp"
            android:textStyle="bold" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?attr/ratingBarStyleSmall"
            android:layout_below="@+id/UserName"
            android:layout_toEndOf="@+id/imgProfile"
            android:numStars="5"
            android:layout_marginTop="5dp"
            android:progressBackgroundTint="@color/background_color"
            android:progressTint="@color/primary_color"
            android:rating="3"
            android:transformPivotX="0dp" />

        <ImageView
            style="@style/Wrap"
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/phone_icon"
            android:layout_centerVertical="true"/>

    </RelativeLayout>


    <FrameLayout
        android:id="@+id/acceptBottomConstrainLinearLayout"
        style="@style/OnlineFooterStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <LinearLayout
            android:id="@+id/startTripConstrainLinearLayout"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/OnlineFooterStyle"
            android:visibility="gone">

            <Button
                android:id="@+id/btnReject"
                android:text="@string/cancel_button"
                style="@style/OnlineFooterButtonStyle" />

            <Button
                android:id="@+id/btnAccept"
                android:text="@string/arrived_button"
                style="@style/OnlineFooterButtonStyle" />

        </LinearLayout>
        <RelativeLayout
            android:id="@+id/endTripConstrainRelativeLayout"
            style="@style/Fat"
            android:visibility="visible">
            <View
                style="@style/Fat"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:background="@color/transprent_black"
                android:focusable="false"
                />

            <TextView
                style="@style/Fat"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:textColor="@color/background_color"
                android:text="@string/slide_end_trip_txt"
                android:textSize="20sp"
                android:focusable="false"
                />

            <LinearLayout
            style="@style/Fat"
            android:orientation="horizontal">
                <LinearLayout
                android:id="@+id/leftSideLinearLayout"
                style="@style/Fat"
                android:orientation="vertical"
                android:layout_weight="1">
                    <ImageView
                    android:id="@+id/endTripImageView"
                    style="@style/Wrap"
                    android:src="@drawable/ic_endtripicon"/>

                </LinearLayout>
                <LinearLayout
                android:id="@+id/rightSideLinearLayout"
                style="@style/Fat"
                android:orientation="horizontal"
                    android:layout_weight="1">

                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </FrameLayout>

</android.support.constraint.ConstraintLayout>