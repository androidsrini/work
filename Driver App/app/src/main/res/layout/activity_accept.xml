<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_lay"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="0.1"
            />

    <RelativeLayout
        android:id="@+id/acceptStripRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.13"
        android:background="@color/secondary_color"
        android:padding="@dimen/padding_10"
       >

        <TextView
            android:id="@+id/pickupTitleTextView"
            style="@style/Fat.PickupLabelStyle"
            android:text="@string/online_pick_up_location_title" />

        <TextView
            android:id="@+id/tvPickLocation"
            style="@style/Fat.PickupAddressStyle"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="@string/dummy_pickup_location" />

        <ImageView
            android:id="@+id/pickupNavigationImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_navigate" />
    </RelativeLayout>

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toTopOf="@+id/acceptPersonConstrainRelativeLayout"
        app:layout_constraintTop_toBottomOf="@+id/acceptStripRelativeLayout" />
   <!-- <com.google.android.gms.maps.MapView
        android:id="@+id/acceptMapView"
        style="@style/Fat"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/acceptPersonConstrainRelativeLayout"
        app:layout_constraintTop_toBottomOf="@+id/acceptStripRelativeLayout" />-->

    <RelativeLayout
        android:id="@+id/acceptPersonConstrainRelativeLayout"
        android:background="@color/secondary_color"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        app:layout_constraintBottom_toTopOf="@+id/acceptBottomConstrainLinearLayout">

        <ImageView
            android:id="@+id/imgProfile"
            style="@style/Wrap"
            android:layout_centerVertical="true"
            android:src="@drawable/user" />

        <TextView
            android:id="@+id/UserName"
            style="@style/Wrap"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@+id/imgProfile"
            android:text="Vijay"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/background_color"
            android:textSize="23sp"
            android:textStyle="bold" />

        <RatingBar
            android:id="@+id/ratingBar"
            style="?attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/UserName"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/imgProfile"
            android:numStars="5"
            android:progressBackgroundTint="@color/background_color"
            android:progressTint="@color/primary_color"
            android:rating="3"
            android:transformPivotX="0dp" />

        <ImageView
            android:id="@+id/imgCall"
            style="@style/Wrap"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/phone_icon" />

    </RelativeLayout>


    <FrameLayout
        android:id="@+id/acceptBottomConstrainLinearLayout"
        style="@style/OnlineFooterStyle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.12"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/startTripConstrainLinearLayout"
            style="@style/OnlineFooterStyle"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent">

            <Button
                android:id="@+id/btnReject"
                style="@style/OnlineFooterButtonStyle"
                android:text="@string/cancel_button" />

            <Button
                android:id="@+id/btnAccept"
                style="@style/OnlineFooterButtonStyle"
                android:text="@string/arrived_button" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/endTripConstrainRelativeLayout"
            style="@style/Fat"
            android:visibility="gone">

            <View
                style="@style/Fat"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:background="@color/transprent_black"
                android:focusable="false" />

            <TextView
                style="@style/Fat"
                android:layout_centerVertical="true"
                android:focusable="false"
                android:gravity="center"
                android:text="@string/slide_end_trip_txt"
                android:textColor="@color/background_color"
                android:textSize="20sp" />

            <LinearLayout
                style="@style/Fat"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/leftSideLinearLayout"
                    style="@style/Fat"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/endTripImageView"
                        style="@style/Wrap"
                        android:src="@drawable/ic_endtripicon" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rightSideLinearLayout"
                    style="@style/Fat"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </FrameLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>