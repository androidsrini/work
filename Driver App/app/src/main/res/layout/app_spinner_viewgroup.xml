<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/selectVehicleRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/invite_code_textInputLayout">

        <TextView
            android:id="@+id/selectVehicleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/secondary_color"
            android:hint="@string/select_vehicle"
            android:textColorHint="@color/dark_grey" />

        <ImageView
            android:id="@+id/selectVehicleArrowImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shipping_address_spinner_arrow"
            android:layout_alignParentEnd="true"
            tools:ignore="ContentDescription" />


    </RelativeLayout>

    <View
        android:id="@+id/selectVehicleDivider"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/primary_color"
        android:layout_below="@+id/selectVehicleRelativeLayout"
        />

</RelativeLayout>