<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rlSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">


        <RelativeLayout
            android:id="@+id/rlSettingAddBank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_blue_color"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_weight="1">

            <ImageView
                android:id="@+id/imgAddBank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bank_detail"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/tvSettingAddBankText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/imgAddBank"
                android:text="@string/setting_add_bank"
                android:textColor="@color/secondary_color"
                android:textSize="19sp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlSettingPayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_blue_color"
            android:layout_below="@+id/rlSettingAddBank"
            app:layout_constraintVertical_weight="1">

            <ImageView
                android:id="@+id/imgPayment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/payment_type"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/tvSettingPaymentText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/imgPayment"
                android:text="@string/setting_type_pay"
                android:textColor="@color/secondary_color"
                android:textSize="19sp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold" />

        </RelativeLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>