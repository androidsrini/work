<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/action_bar_color</item>
        <!--<item name="colorAccent">@color/colorAccent</item>-->
        <item name="colorAccent">@color/primary_color</item>
        <item name="android:textColorHint">@color/secondary_color</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Edit text background line color -->
        <item name="colorControlNormal">@color/primary_color</item>
        <item name="colorControlActivated">@color/primary_color</item>
        <item name="colorControlHighlight">@color/primary_color</item>
    </style>

    <style name="AppThemeWithoutSideDrawer" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/action_bar_color</item>
        <!--<item name="colorAccent">@color/colorAccent</item>-->
        <item name="colorAccent">@color/primary_color</item>
        <item name="android:textColorHint">@color/secondary_color</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Edit text background line color -->
    </style>

    <style name="drawableColorTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!--do this for changing the color-->
        <item name="drawerArrowStyle">@style/DrawerHamburgerStyle</item>
    </style>

    <style name="DrawerHamburgerStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/black</item>
    </style>

    <style name="EditTextTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/low_contrast</item>
        <item name="colorControlActivated">@color/primary_color</item>
        <item name="colorControlHighlight">@color/primary_color</item>
    </style>

    <style name="Fat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TitlebarText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textColor">@color/background_color</item>
        <item name="android:shadowColor">@color/low_contrast</item>
        <item name="android:shadowRadius">0.75</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
    </style>

    <style name="SwitchCompatTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="android:textSize">12sp</item>
    </style>

    <style name="MyRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="colorControlNormal">@color/background_color</item>
        <item name="colorControlActivated">@color/primary_color</item>
    </style>


    <style name="TransparentCompat" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="appButtonProperty">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/margin_10</item>
        <item name="android:layout_marginStart">@dimen/margin_10</item>
        <item name="android:background">@color/primary_color</item>
        <item name="android:textColor">@color/secondary_color</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>

    </style>

    <style name="vehicleTopDottedStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/dotted_horizontal_drawable</item>
        <item name="android:layerType">software</item>
    </style>

    <style name="OnlineFooterStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/primary_color</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">10dp</item>
        <item name="android:weightSum">1</item>
    </style>

    <style name="OnlineFooterButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:background">@drawable/button_filled_secondary</item>
        <item name="android:textColor">@color/background_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Fat.PickupLabelStyle">
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:layout_toStartOf">@+id/pickupNavigationImageView</item>
    </style>

    <style name="Fat.PickupAddressStyle">
        <item name="android:textColor">@color/background_color</item>
        <item name="android:layout_toStartOf">@+id/pickupNavigationImageView</item>
        <item name="android:layout_below">@+id/pickupTitleTextView</item>
    </style>

    <style name="Wrap.PaymentSummeryHeader">
        <item name="android:textSize">@dimen/payment_summer_header_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/secondary_color</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="Wrap.PaymentDetailsStyle">
        <item name="android:textColor">@color/secondary_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Wrap.SummaryLabelStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_margin">@dimen/margin_10</item>
    </style>

    <style name="Wrap.SummeryValue">
        <item name="android:layout_margin">@dimen/margin_10</item>
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_down_dialog</item>
    </style>

    <style name="RideHistoryCancelStyle">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawableStart">@drawable/ic_cancel_white_24dp</item>
        <item name="android:textColor">@color/background_color</item>
        <item name="android:background">@drawable/cancel_ride_rectangle_drawable</item>
    </style>

    <style name="SuccessRideHistoryCancelStyle">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawableStart">@drawable/ic_check_circle_white_24dp</item>
        <item name="android:textColor">@color/background_color</item>
        <item name="android:background">@drawable/success_ride_rectangle_drawable</item>
    </style>

    <style name="Wrap.ReceiptLabelStyle">
        <item name="android:layout_marginTop">@dimen/margin_5</item>
        <item name="android:layout_marginStart">@dimen/margin_10</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@color/secondary_color</item>
    </style>

    <style name="Wrap.ReceiptValueStyle">
        <item name="android:layout_marginTop">@dimen/margin_5</item>
        <item name="android:layout_marginEnd">@dimen/margin_10</item>
        <item name="android:textColor">@color/secondary_color</item>
    </style>

</resources>
